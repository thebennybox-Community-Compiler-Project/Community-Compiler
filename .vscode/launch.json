{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bootstrap/frontend/build/frontend",
            "args": [
                "./bin/out.fil",
                "./main.ds",
                "./il.ds",
                "./bool.ds",
                "./f32.ds",
                "./f64.ds",
                "./i16.ds",
                "./i32.ds",
                "./i8.ds",
                "./str.ds",
                "./u16.ds",
                "./u32.ds",
                "./u8.ds",
                "./mem.ds",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/bootstrap/stdlib/",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "logging": {
                // "engineLogging": true
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    //"ignoreFailures": true
                }
            ]
        }
    ]
}